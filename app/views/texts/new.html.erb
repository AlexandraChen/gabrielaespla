<div class="wrapper">
  <div class="col-sm-6 col-sm-offset-3">
  <h1> Agregar un nuevo texto </h1>
  <br>
    <%= form_for @text do |f| %>
      <%= f.label "Título" %>
      <%= f.text_field :title, class: "form-control", placeholder:"Título", :required => true %>
      <br>
      <%= f.label "Texto" %>
      <%= f.text_area :content, class: "form-control", placeholder: "Texto", :required => true%>
      <br>
      <%= f.label "Lugar" %>
      <%= f.text_field :place, class: "form-control", placeholder: "Lugar", :required => true %>
      <br>
      <%= f.label "Fecha de publicación" %>
      <%= f.date_field :published_date, class: "form-control", placeholder: "Fecha de publicación", :required => true %>
      <br>
      <%= f.submit "Agregar texto", class: "btn btn-default col-sm-12"%>
    <% end %>
  </div>
</div>


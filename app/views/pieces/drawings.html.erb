<div class="wrapper">
  <div class="container all-pieces">
    <h1 class="item-title">Dibujo</h1>
     <div class= "piece-wrapper">
      <div id="pins" class="transitions-enabled">
        <% @drawings.each do |drawing| %>
        <div class="box">
          <div class="wrapper">

            <%= link_to drawing.title, piece_path(drawing.id), class:"project-overlay"  %>
            <%= image_tag(drawing.photos.first.img.url(:medium))%>
           </div>
           <div class="panel-body">
              <p class="item-subtitle"> <%= drawing.title %> </p>
            </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



<div class="wrapper">
  <div class="container all-pieces">
    <h1 class="item-title">Pintura</h1>
     <div class= "piece-wrapper">
      <div id="pins" class="transitions-enabled">
        <% @paintings.each do |painting| %>
        <div class="box panel panel-default" id="projects-box">
          <div class="panel-heading" id="img-wrapper">
            <%= link_to "", piece_path(painting.id), class:"project-overlay"  %>
            <%= image_tag(painting.photos.first.img.url(:medium))%>
          </div>
          <div class="panel-body">
            <p class="item-subtitle"> <%= painting.title %> </p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



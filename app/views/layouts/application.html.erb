<!DOCTYPE html>
<html>
<head>
  <title>Gabriela Espl√°</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  
</head>
<body>
  <% unless current_page?("/") %>
    <%= render partial: "layouts/header" %>
  <% end %>
    <% flash.each do |name, msg| %>
      <% if alert %>
        <%= content_tag(:div, msg, class:"alert alert-danger", id:"flash-notice") %>
      <% elsif notice %>
        <%= content_tag(:div, msg, class:"alert alert-success", id:"flash-notice") %>
      <% end %>
    <% end %>
  <% unless current_page?("/") %>  
    <div class="wrapper">
  <% end %>
    <%= yield %>
  </div>
  <% unless current_page?("/") %>
    <%= render partial: "layouts/footer" %>
  <% end %>

</body>
</html>

<div class="wrapper">
  <div class="col-sm-6 col-sm-offset-3">
  <h1> Agregar un nuevo proyecto </h1>
  <br>      
    <%= form_for @project, html: { multipart: true } do |f| %>
      <%= f.label "Título" %>
      <%= f.text_field :title, class: "form-control", placeholder:"Título" %>
      <br>
         
      <%= file_field_tag "images[]", :required => true, type: :file, multiple: true, :required => true %>
      <br>
      <%= f.label "Descripción" %>
      <%= f.text_area :description, :required => true, class: "form-control", placeholder: "Decripción" %>
      <br>
      <%= f.label "Fecha de publicación" %>
      <%= f.date_field :published_date, class: "form-control", placeholder: "Fecha de publicación", :required => true %>
      <br>
      <br>
      <%= f.submit "Agregar proyecto", class: "btn btn-default col-sm-12"%>
    <% end %>
  </div>
</div>




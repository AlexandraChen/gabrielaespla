<div class="wrapper">
  <div class="col-sm-6 col-sm-offset-3">
  <h1> Editar proyecto </h1>
  <br>      
    <%= form_for @project, html: { multipart: true } do |f| %>
      <%= f.label "Título" %>
      <%= f.text_field :title, class: "form-control", placeholder:"Título" %>
      <br>

      <% if @project.photos.exists? %>
        <%@project.photos.each do |x|  %>
        <%= image_tag x.img.url(:thumb) %>
        <%= check_box_tag "photo_ids[]", x.id %>
        <% end %>
      <% end %>

      <%= file_field_tag "images[]", type: :file, multiple: true %>
      <br>
      <%= f.label "Descripción" %>
      <%= f.text_area :description, class: "form-control", placeholder: "Decripción" %>
      <br>
      <%= f.label "Fecha de publicación" %>
      <%= f.date_field :published_date, class: "form-control", placeholder: "Fecha de publicación" %>
      <br>
      <br>
      <%= f.submit "Editar proyecto", class: "btn btn-default col-sm-12"%>
    <% end %>
  </div>
</div>

